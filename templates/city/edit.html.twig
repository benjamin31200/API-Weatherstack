{% extends 'base.html.twig' %}

{% block title %}City index
{% endblock %}

{% block body %}
	<section class="body">
		<section class="select_city">
			<div class="city">
				<p>La ville sélectionnée:</p>
				<p class="setCity">{{ city.city1 }}</p>
			</div>
			<div class="select">
				<h1>Edit City</h1>
				{{ include('city/_form.html.twig', {'button_label': 'Update'}) }}
			</div>
		</section>
		<section class="comparator_city">
			<div class="container">
				<p class="text cloudcoverCity"></p>
				<p class="text feelslikeCity"></p>
				<p class="text humidityCity"></p>
			</div>
			<div class="data"></div>
		</section>
	</section>
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('weatherstack') }}
{% endblock %}
